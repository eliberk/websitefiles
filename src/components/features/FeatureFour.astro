---
const features = [
  {
    title: "Pre-Trade",
    description:
      "DerivaConnect offers a wide range of instrument offerings as well as real-time trading and clearing limits through our proprietary risk management system.",
  },
  {
    title: "Trading",
    description:
      "DerivaConnect provides participants with the flexibility of order book, request for quote or voice-assisted execution models.",
  },
  {
    title: "Post-Trade",
    description:
      "DerivaConnect provides direct links to clearinghouses, automatic SDR reporting, MarkitWire drop copy and audit trail/compliance.",
  },
];
const iconFeatures = [
  {
    icon: "transactions",
    title: "Commodity Swaps",
  },
  {
    icon: "banking",
    title: "Forward Rate Agreements",
  },
  {
    icon: "customcards",
    title: "Interest Rate Swaps",
  },
  {
    icon: "handling",
    title: "Swaptions",
  },
  {
    icon: "transfers",
    title: "FX Non Deliverable Forwards",
  },
  {
    icon: "realtime",
    title: "Overnight Index Swaps",
  },
  {
    icon: "fednow",
    title: "Inflation Swaps",
  },
  {
    icon: "support",
    title: "Credit Default Swaps",
  },
];
---

<section class="overflow-hidden">
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-screen-xl relative">
    <div class="flex flex-col gap-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-end">
        <div>
          <span
            class="text-blue-600 uppercase font-mono font-medium tracking-tight text-xs"
          >
            Leading Trading Partner for Institutions Worldwide
          </span>
          <p class="text-4xl mt-8 tracking-tighter font-semibold text-blue-950">
            Premier suite of options <span
              class="md:block md:text-transparent md:bg-clip-text md:bg-gradient-to-r from-blue-500 to-indigo-600 py-2"
              >on the best trading platform catering to institutions
            </span>
          </p>
          <p class="text-base lg:text-base max-w-sm mt-4 text-gray-700">
            The DerivaConnect Swap Execution Facility (SEF) provides market
            participants with a unique opportunity to trade a range of OTC
            derivatives using an array of fully compliant execution models. As
            well as its anonymous multi-asset central limit order book (CLOB),
            DerivaConnect offers request for quote (RFQ), request for market
            (RFM) and indication of interest (IOI) trading protocols. Products
            include interest rate swaps, FX/NDFs, and equity derivatives.
            Clearing is integrated through CME Group and LCH. Clearnet. With
            benchmark and customized derivatives trading, DerivaConnect enables
            participants to precisely hedge, consolidate or terminate risk
            positions.
          </p>
        </div>
        <div
          class="text-sm font-medium grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-2"
        >
          {
            iconFeatures.map((feature) => (
              <>
                <div class="inline-flex items-center gap-2  font-mono uppercase tracking-tighter text-xs">
                  {feature.icon === "transactions" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-send"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M10 14l11 -11" />{" "}
                      <path d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5" />{" "}
                    </svg>
                  )}
                  {feature.icon === "banking" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-wallet"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12" />{" "}
                      <path d="M20 12v4h-4a2 2 0 0 1 0 -4h4" />{" "}
                    </svg>
                  )}
                  {feature.icon === "customcards" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-credit-card"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M3 5m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v8a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z" />{" "}
                      <path d="M3 10l18 0" /> <path d="M7 15l.01 0" />{" "}
                      <path d="M11 15l2 0" />{" "}
                    </svg>
                  )}
                  {feature.icon === "handling" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-checkup-list"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" />{" "}
                      <path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z" />{" "}
                      <path d="M9 14h.01" /> <path d="M9 17h.01" />{" "}
                      <path d="M12 16l1 1l3 -3" />{" "}
                    </svg>
                  )}
                  {feature.icon === "transfers" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-world"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />{" "}
                      <path d="M3.6 9h16.8" /> <path d="M3.6 15h16.8" />{" "}
                      <path d="M11.5 3a17 17 0 0 0 0 18" />{" "}
                      <path d="M12.5 3a17 17 0 0 1 0 18" />{" "}
                    </svg>
                  )}
                  {feature.icon === "realtime" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-transfer"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M20 10h-16l5.5 -6" />{" "}
                      <path d="M4 14h16l-5.5 6" />{" "}
                    </svg>
                  )}
                  {feature.icon === "fednow" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-square-rounded-arrow-right"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M12 16l4 -4l-4 -4" /> <path d="M8 12h8" />{" "}
                      <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" />{" "}
                    </svg>
                  )}
                  {feature.icon === "support" && (
                    <svg
                      class="size-4 icon icon-tabler text-blue-700 icon-tabler-lifebuoy"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      {" "}
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />{" "}
                      <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" />{" "}
                      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />{" "}
                      <path d="M15 15l3.35 3.35" />{" "}
                      <path d="M9 15l-3.35 3.35" />{" "}
                      <path d="M5.65 5.65l3.35 3.35" />{" "}
                      <path d="M18.35 5.65l-3.35 3.35" />{" "}
                    </svg>
                  )}
                  <div class="text-sm font-medium">{feature.title}</div>
                </div>
              </>
            ))
          }
        </div>
      </div>
      <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-12">
        <img
          class="rounded-2xl shadow-box shadow-slate-500/20 tilt-card"
          src="/widget1.svg"
          alt=""
        />
        <img
          class="rounded-2xl shadow-box shadow-slate-500/20 tilt-card"
          src="/widget2.svg"
          alt=""
        />
      </div>

      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-3 mt-8">
        {
          features.map((feature) => (
            <>
              <div>
                <p class="text-base font-medium text-blue-950 font-mono uppercase tracking-tighter">
                  {feature.title}
                </p>
                <p class="text-sm mt-2 text-gray-700">{feature.description}</p>
              </div>
            </>
          ))
        }
      </div>
    </div>
  </div>
</section>
